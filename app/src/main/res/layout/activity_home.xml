<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CBE4D5A6"
        android:fontFamily="cursive"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/Welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/teal_700"
        android:textSize="54sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/doctor_layout"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="#541ABC"
        android:clickable="true"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          app:srcCompat="@drawable/doctor" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:fontFamily="serif"
          android:gravity="center|center_horizontal"
          android:text="@string/Doctor"
          android:textColor="@color/design_default_color_on_secondary"
          android:textSize="44sp"
          android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/donor_layout"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="#FFEB3B"
        android:clickable="true"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          app:srcCompat="@drawable/donor" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:fontFamily="serif"
          android:gravity="center"
          android:text="@string/Donor"
          android:textColor="@color/black"
          android:textSize="44sp"
          android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/patient_layout"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="#2196F3"
        android:clickable="true"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          app:srcCompat="@drawable/patient" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:fontFamily="serif"
          android:gravity="center"
          android:text="@string/Patient"
          android:textColor="@color/black"
          android:textSize="44sp"
          android:textStyle="italic" />
    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>